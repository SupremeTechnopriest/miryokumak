// Shift Mods
#define HOME_ROW_MOD_SHIFT_LH(NAME, TAP) \
  HOME_ROW_MOD_SHIFT_HELPER(NAME, RIGHT_HAND_KEYS THUMB_KEYS, TAP)

#define HOME_ROW_MOD_SHIFT_RH(NAME, TAP) \
  HOME_ROW_MOD_SHIFT_HELPER(NAME, LEFT_HAND_KEYS THUMB_KEYS, TAP)

HOME_ROW_MOD_SHIFT_LH(lhrsm, &kp)
HOME_ROW_MOD_SHIFT_RH(rhrsm, &kp)

// Other Mods 
#define HOME_ROW_MOD_LH(NAME, TAP) \
