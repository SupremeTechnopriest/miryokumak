#define HOME_ROW_MOD_HELPER(NAME, KEY_POSITIONS, TAP) \
  TAP_PREFERRED_HOLD_TAP(NAME, \
    tapping-term-ms = <HRM_HOLD_TIME>; \
    quick-tap-ms = <HRM_REPEAT_TIME>; \
    require-prior-idle-ms = <HRM_IDLE_TIME>; \
    hold-trigger-key-positions = <KEY_POSITIONS>; \
    hold-trigger-on-release; \
    bindings = <&kp>, <TAP>; \
  )

#define HOME_ROW_MOD_SHIFT_HELPER(NAME, KEY_POSITIONS, TAP) \
  TAP_PREFERRED_HOLD_TAP(NAME, \
    tapping-term-ms = <HRM_HOLD_TIME>; \
    quick-tap-ms = <HRM_REPEAT_TIME>; \
    require-prior-idle-ms = <HRM_IDLE_TIME>; \
    hold-trigger-key-positions = <KEY_POSITIONS>; \
    bindings = <&kp>, <TAP>; \
  )

