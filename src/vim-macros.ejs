<%# vim:set filetype=dts: %>

  /*
  ╭──────────────────────────────────────────────────────────╮
  │ Vim Macros                                               │
  ╰──────────────────────────────────────────────────────────╯
  */

  vim_leader: vim_leader {
    label = "VIM_LEADER";
    compatible = "zmk,behavior-macro-one-param";
    #binding-cells = <1>;
    bindings
      = <&macro_tap &kp SPACE>
      , <&macro_param_1to1>
      , <&macro_tap &kp MACRO_PLACEHOLDER>
      ;
  };

  vim_leader_shift: vim_leader_shift {
    label = "VIM_LEADER_SHIFT";
    compatible = "zmk,behavior-macro-one-param";
    #binding-cells = <1>;
    bindings
      = <&macro_tap &kp SPACE>
      , <&macro_press &kp LSHFT>
      , <&macro_param_1to1>
      , <&macro_tap &kp MACRO_PLACEHOLDER>
      , <&macro_release &kp LSHFT>
      ;
  };

  vim_window: vim_window {
    label = "VIM_WINDOW";
    compatible = "zmk,behavior-macro-one-param";
    #binding-cells = <1>;
    bindings
      = <&macro_tap &kp SPACE>
      , <&macro_tap &kp W>
      , <&macro_param_1to1>
      , <&macro_tap &kp MACRO_PLACEHOLDER>
      ;
  };

  vim_split: vim_split {
    label = "VIM_SPLIT";
    compatible = "zmk,behavior-macro-one-param";
    #binding-cells = <1>;
    bindings
      = <&macro_tap &kp SPACE>
      , <&macro_tap &kp SPACE>
      , <&macro_param_1to1>
      , <&macro_tap &kp MACRO_PLACEHOLDER>
      ;
  };
